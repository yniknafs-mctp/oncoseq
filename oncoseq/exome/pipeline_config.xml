  <!-- modules used by pipeline -->
  <modules>
    <module>epd</module>
    <module>java</module>
    <module>R</module>
    <module>activeperl</module>
    <module>bioinfo</module>
    <module>bx-python/0.7.0</module>
    <module>pysam/0.5</module>
    <module>fastqc/0.9.4</module>
    <module>picard/1.69</module>
    <module>samtools/0.1.18</module>
    <module>bowtie/0.12.7</module>
    <module>bowtie2/2.0.0-beta6</module>
    <module>tophat/2.0.4</module>
    <module>cufflinks/2.0.2</module>
    <module>BEDTools/2.12.0</module>
    <module>ucsc/2012-Feb-08</module>
    <module>varscan/2.2.8</module>
    <module>bwa/0.6.1</module>
    <module>chimerascan/0.4.5</module>
  </modules>


  <!-- RNA pipeline -->
  <!-- fragment size parameters -->
  <fragment_size_mean_default>200</fragment_size_mean_default>
  <fragment_size_stdev_default>80</fragment_size_stdev_default>
  <adaptor_length_default>110</adaptor_length_default>
  <min_fragment_size>0</min_fragment_size>
  <max_fragment_size>1000</max_fragment_size>

  <!-- tophat parameters -->
  <tophat>
    <arg>--GTF ${SPECIES}/Annotation/Genes/genes.gtf</arg>
    <arg>--transcriptome-index ${SPECIES}/Sequence/Transcriptome/Tophat2Index/known</arg>   
  </tophat>

  <!-- cufflinks parameters -->
  <cufflinks>
    <arg>--GTF ${SPECIES}/Annotation/Genes/genes.gtf</arg>
    <arg>-M ${SPECIES}/Annotation/Genes/cufflinks_mask_genes.gtf</arg>
    <arg>-b ${SPECIES}/Sequence/Genome/genome_lexicographical_order.fa</arg>
    <arg>--multi-read-correct</arg>
    <arg>--no-update-check</arg>
    <arg>-q</arg>
  </cufflinks>

  <!-- chimerascan parameters -->
  <chimerascan>
	<index>${SPECIES}/Sequence/ChimerascanIndex</index>
	<trim5>1</trim5>
    <trim3>1</trim3>
    <frag_size_percentile>1.0</frag_size_percentile>
    <arg>-v</arg>
    <arg>--keep-tmp</arg>
  </chimerascan>

  <!--Exome Pipeline Parameters -->
  <exome_match_normal>1</exome_match_normal>
  <!--BWA Parameters -->
  <bwa>
    <bwa_cores>6</bwa_cores>
    <nmismatch>2</nmismatch>
    <bwa_qual_trim>20</bwa_qual_trim>
    <mapping_qual>10</mapping_qual>
  </bwa>

  <!--Varscan Parameters -->
  <varscan>
    <min_coverage>1</min_coverage>
    <min_reads_alt>1</min_reads_alt>
    <min_avgbase_quality>13</min_avgbase_quality>
    <min_var_freq>0.01</min_var_freq>
    <min_pvalue>0.01</min_pvalue>
  </varscan>
   
  <!-- EXOME_KITS={'AGILENT':"capture_agilent", 'ROCHE':"capture_roche", 'TRUSEQ':"capture_truseq"}-->
  <!-- species specific file locations -->
  <species name="human">
    <root_dir>Homo_sapiens_Ensembl_GRCh37</root_dir>
	<!-- sequences and alignment indexes -->
    <abundant_index>Sequence/AbundantSequences/abundant</abundant_index>
    <foreign_index>Sequence/ForeignSequences/foreign3</foreign_index>
    <genome_fasta_file>Sequence/Genome/genome_lexicographical_order.fa</genome_fasta_file>
    <genome_bwa_index>Sequence/Genome/BWAIndex_v0.6.1/genome.fa</genome_bwa_index>
    <genome_bowtie2_index>Sequence/Genome/Bowtie2Index/genome</genome_bowtie2_index>
    <fragment_size_bowtie_index>Sequence/FragSizeBowtieIndex/fragsize</fragment_size_bowtie_index>
	<!-- annotations -->
    <chrom_sizes>Annotation/ChromInfo.txt</chrom_sizes>
    <gene_annotation_refflat>Annotation/Genes/refFlat.txt</gene_annotation_refflat>
    <picard_ribosomal_intervals>Annotation/Genes/picard_ribosomal_intervals.txt</picard_ribosomal_intervals>
    <cosmic_positions>Annotation/Exome/CosmicMutations_AtInformativeGenes_cosmic_v56_151111.3.bed</cosmic_positions>
    <capture_roche>Annotation/Exome/Roche_probes_coords_EZExome2_Tiled.bed</capture_roche>
    <capture_agilent>Annotation/Exome/SureSelect_probes_coords_50MbKit.GRCh37.bed</capture_agilent>
    <capture_agilent_v3>Annotation/Exome/SureSelect_probes_coords_50MbKit.GRCh37.bed</capture_agilent_v3>
    <capture_truseq>Annotation/Exome/TruSeq_Exome_Targeted_Regions.bed</capture_truseq>
    <exome_bed_file>Annotation/Exome/CCDSGene.B37.bed</exome_bed_file>
  </species>

</oncoseq>
